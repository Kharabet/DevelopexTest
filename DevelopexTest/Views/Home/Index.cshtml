<div class="row">
    <div class="col-md-4">
        <form id="search-form" class="form-horizontal" action="api/search" method="post">
            <input id="guid" type="hidden" name="Guid" value="@Guid.NewGuid()" />

            <div class="form-group">
                <label class="control-label">Start URL</label>
                <input class="form-control" name="StartUrl" type="text">
            </div>
            <div class="form-group">
                <label class="control-label">Max threads count</label>
                <input class="form-control" name="MaxThreadsCount" type="text">
            </div>
            <div class="form-group">
                <label class="control-label">Text to search</label>
                <input class="form-control" name="TextToSearch" type="text">
            </div>
            <div class="form-group">
                <label class="control-label">Max URLs count</label>
                <input class="form-control" name="MaxUrlsCount" type="text">
            </div>

            <div class="form-group">
                <input class="btn" type="submit" id="search-btn">
            </div>

        </form>
    </div>
    <div class="col-md-4">
        <h2>Live Stock Table</h2>
        <div id="stockTable">
            <table border="1">
                <thead>
                    <tr><th>Url</th><th>Progress</th><th>Status</th></tr>
                </thead>
                <tbody>
                    <tr class="loading"><td colspan="5">loading...</td></tr>
                </tbody>
            </table>
        </div>    </div>
